<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Load Tailwind CDN first -->
    <template id="tailwind_cdn" inherit_id="web.layout">
        <xpath expr="//head" position="inside">
            <script src="https://cdn.tailwindcss.com"></script>
        </xpath>
    </template>

    <!-- Load custom fonts and config -->
    <template id="custom_assets" inherit_id="website.layout" name="Custom Assets">
        <xpath expr="//head" position="inside">
            <!-- Custom CSS with fonts - load after Tailwind -->
            <link rel="stylesheet" type="text/css" href="/website_customizations/static/src/css/tailwind_input.css"/>

            <!-- Tailwind Config -->
            <script type="text/javascript" src="/website_customizations/static/src/js/tailwind_config.js"></script>

            <!-- Navbar specific assets -->
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/navbar/navbar.css"/>
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/navbar/mobile_categories.css"/>
            <script type="text/javascript"
                    src="/website_customizations/static/src/js/components/navbar/navbar.js"></script>

            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/navbar/menu_popup.css"/>
            <script type="text/javascript"
                    src="/website_customizations/static/src/js/components/navbar/menu_popup.js"></script>

            <!-- ================================= HERO SECTION MODULAR COMPONENTS ================================= -->
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/hero_section/hero_carousel_base.css"/>
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/hero_section/hero_carousel_indicators.css"/>
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/hero_section/hero_carousel_controls.css"/>
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/hero_section/hero_carousel_responsive.css"/>
            <script type="text/javascript"
                    src="/website_customizations/static/src/js/components/hero_section/hero_carousel_config.js"></script>

            <!-- ================================= CATEGORY STRIP MODULAR COMPONENTS ================================= -->
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/category_strip/category_strip.css"/>
            <script type="text/javascript"
                    src="/website_customizations/static/src/js/components/category_strip/category_strip_main.js"></script>

            <!-- ================================= PRODUCT CARDS MODULAR COMPONENTS ================================= -->
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/product_cards/product_grid.css"/>
            <script type="text/javascript"
                    src="/website_customizations/static/src/js/components/product_cards/product_grid.js"></script>


            <!-- ================================= MENU SECTIONS COMPONENTS ================================= -->
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/menu_sections/menu_sections.css"/>

            <!-- ================================= FOOTER COMPONENTS ================================= -->
            <link rel="stylesheet" type="text/css"
                  href="/website_customizations/static/src/css/components/footer/footer.css"/>

            <!-- Force font loading -->
            <style>
                * {
                font-family: 'Montserrat', sans-serif !important;
                }
            </style>
        </xpath>
    </template>
</odoo>