<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================= UPDATED CUSTOM HOMEPAGE WITH CART SYSTEM ================================= -->
    <template id="custom_homepage" name="Custom Homepage" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="inside">
            <!-- Hero Section -->
            <t t-call="website_customizations.hero_section_carousel"/>

            <!-- Category Strip - Right after hero -->
            <t t-call="website_customizations.category_strip_complete"/>

            <!-- All Menu Sections -->
            <t t-call="website_customizations.menu_sections_complete"/>

            <!-- Cart Popup Components  -->
            <!-- <t t-call="website_customizations.cart_view_popup"/>
            <t t-call="website_customizations.cart_sidebar"/> -->

        </xpath>
    </template>
</odoo>