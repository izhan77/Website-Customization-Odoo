<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_homepage" name="Custom Homepage" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="replace">
            <div id="wrap" class="js_fullheight">
                <main class="main-content">
                    <section class="hero-section">
                        <t t-call="website_customizations.hero_section_carousel"/>
                    </section>

                    <div id="category-strip-wrapper" class="category-strip-container">
                        <t t-call="website_customizations.category_strip_complete"/>
                    </div>
                    <div class="category-strip-placeholder"></div>

                    <section class="menu-sections">
                        <t t-call="website_customizations.menu_sections_complete"/>
                    </section>

                    <t t-call="website_customizations.cravely_product_popup_modal"/>

                </main>
            </div>
        </xpath>
    </template>
</odoo>