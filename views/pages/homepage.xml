<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_homepage" name="Custom Homepage" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="inside">
            <!-- Hero Section -->
            <t t-call="website_customizations.hero_section_carousel"/>

            <!-- Category Strip - Right after hero -->
            <t t-call="website_customizations.category_strip_complete"/>
        </xpath>
    </template>
</odoo>