<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ================================= PRODUCT GRID MAIN TEMPLATE ================================= -->
    <template id="product_grid" name="Product Grid Section">
        <!-- Main Product Grid Container -->
        <section class="product-grid-section bg-gradient-to-br from-gray-50 to-gray-100 py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Section Header -->
                <div class="text-center mb-12">
                    <h2 class="text-4xl font-bold text-gray-900 mb-4">
                        Our Menu
                    </h2>
                    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                        Discover our authentic Middle Eastern cuisine, prepared with the finest ingredients and traditional flavors
                    </p>
                </div>

                <!-- Product Grid -->
                <div class="product-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                    <!-- Product Card 1 - Kebsa Chicken -->
                    <t t-call="website_customizations.single_product_card">
                        <t t-set="product_id" t-value="'kebsa-chicken'"/>
                        <t t-set="product_image" t-value="'/website_customizations/static/src/images/product_1.jpg'"/>
                        <t t-set="product_title" t-value="'Kebsa Chicken'"/>
                        <t t-set="product_description" t-value="'All New Single Person Serving, Quarter Chicken Baked To Perfection Served With Kebsa'"/>
                        <t t-set="product_original_price" t-value="'Rs. 1295'"/>
                        <t t-set="product_discounted_price" t-value="'Rs. 999'"/>
                        <t t-set="product_badge" t-value="'NEW'"/>
                        <t t-set="product_category" t-value="'chicken'"/>
                    </t>

                    <!-- Product Card 2 - Kebsa Mutton Rice Box -->
                    <t t-call="website_customizations.single_product_card">
                        <t t-set="product_id" t-value="'kebsa-mutton'"/>
                        <t t-set="product_image" t-value="'/website_customizations/static/src/images/product_1.jpg'"/>
                        <t t-set="product_title" t-value="'Kebsa Mutton Rice box'"/>
                        <t t-set="product_description" t-value="'Single Person Serving Mutton Baked To Perfection With Flavorful Kebsa Rice.'"/>
                        <t t-set="product_original_price" t-value="'Rs. 1995'"/>
                        <t t-set="product_discounted_price" t-value="'Rs. 1695'"/>
                        <t t-set="product_badge" t-value="'POPULAR'"/>
                        <t t-set="product_category" t-value="'mutton'"/>
                    </t>

                    <!-- Product Card 3 - Additional item -->
                    <t t-call="website_customizations.single_product_card">
                        <t t-set="product_id" t-value="'kebsa-mix'"/>
                        <t t-set="product_image" t-value="'/website_customizations/static/src/images/product_1.jpg'"/>
                        <t t-set="product_title" t-value="'Kebsa Mix Platter'"/>
                        <t t-set="product_description" t-value="'Perfect Combination Of Chicken And Mutton With Traditional Kebsa Rice And Sides'"/>
                        <t t-set="product_original_price" t-value="'Rs. 2495'"/>
                        <t t-set="product_discounted_price" t-value="'Rs. 1995'"/>
                        <t t-set="product_badge" t-value="'BEST SELLER'"/>
                        <t t-set="product_category" t-value="'combo'"/>
                    </t>

                    <!-- Product Card 4 - Another demo item -->
                    <t t-call="website_customizations.single_product_card">
                        <t t-set="product_id" t-value="'kebsa-family'"/>
                        <t t-set="product_image" t-value="'/website_customizations/static/src/images/product_1.jpg'"/>
                        <t t-set="product_title" t-value="'Family Kebsa Feast'"/>
                        <t t-set="product_description" t-value="'Large Family Serving With Whole Chicken, Mutton And Traditional Accompaniments'"/>
                        <t t-set="product_original_price" t-value="'Rs. 4995'"/>
                        <t t-set="product_discounted_price" t-value="'Rs. 3995'"/>
                        <t t-set="product_badge" t-value="'FAMILY SIZE'"/>
                        <t t-set="product_category" t-value="'family'"/>
                    </t>
                </div>

            </div>
        </section>
    </template>
</odoo>