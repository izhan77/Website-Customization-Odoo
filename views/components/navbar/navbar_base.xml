<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_orange_navbar" inherit_id="website.layout" name="Custom Navbar">
        <xpath expr="//header" position="replace">
            <header class="custom-navbar bg-gradient-to-r from-orange-500 to-orange-400 shadow-lg shadow-orange-500/30 sticky top-0 z-50">
                <nav class="container mx-auto px-4 py-4">
                    <div class="flex items-center justify-between">
                        <!-- Logo will be inserted here -->
                        <t t-call="website_customizations.navbar_logo"/>

                        <!-- Mobile menu button -->
                        <t t-call="website_customizations.navbar_mobile_button"/>

                        <!-- Desktop Navigation -->
                        <div class="hidden lg:flex items-center space-x-8 flex-1 justify-center">
                            <t t-call="website_customizations.navbar_desktop_links"/>
                        </div>

                        <!-- Contact button -->
                        <div class="hidden lg:block">
                            <t t-call="website_customizations.navbar_desktop_button"/>
                        </div>
                    </div>

                    <!-- Mobile Navigation Menu -->
                    <t t-call="website_customizations.navbar_mobile_menu"/>
                </nav>
            </header>
        </xpath>
    </template>
</odoo>