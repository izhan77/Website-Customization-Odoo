<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="navbar_desktop_links" name="Navbar Desktop Links">
        <a class="text-white no-underline text-lg font-medium px-6 py-2 rounded-full transition-all duration-300" href="/"
           style="color: white !important;"
           onmouseover="this.style.setProperty('background-color', '#66a39e', 'important'); this.style.setProperty('color', 'white', 'important');"
           onmouseout="this.style.setProperty('background-color', 'transparent', 'important'); this.style.setProperty('color', 'white', 'important');">
            Home
        </a>

        <!-- Menu button with hover trigger -->
        <div class="menu-hover-container relative">
            <a id="menu-hover-trigger" class="text-white no-underline text-lg font-medium px-6 py-2 rounded-full transition-all duration-300 cursor-pointer"
               style="color: white !important;"
               onmouseover="this.style.setProperty('background-color', '#66a39e', 'important'); this.style.setProperty('color', 'white', 'important');"
               onmouseout="this.style.setProperty('background-color', 'transparent', 'important'); this.style.setProperty('color', 'white', 'important');">
                Menu
            </a>
            <!-- Menu Popup -->
            <t t-call="website_customizations.navbar_menu_popup"/>
        </div>

        <a class="text-white no-underline text-lg font-medium px-6 py-2 rounded-full transition-all duration-300" href="/about"
           style="color: white !important;"
           onmouseover="this.style.setProperty('background-color', '#66a39e', 'important'); this.style.setProperty('color', 'white', 'important');"
           onmouseout="this.style.setProperty('background-color', 'transparent', 'important'); this.style.setProperty('color', 'white', 'important');">
            About Us
        </a>
    </template>
</odoo>