<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="navbar_mobile_menu" name="Navbar Mobile Menu">
        <!-- Dark Overlay Background -->
        <div id="mobile-menu" class="md:hidden hidden fixed top-0 left-0 h-full w-full bg-black/30 backdrop-blur-sm z-[998] transition-all duration-500 ease-in-out" style="display: none;">

            <!-- Menu Content Container -->
            <div style="background-color: #7abfba !important;" id="menu-content-container" class="menu-content-container fixed top-0 left-0 w-full bg-[#B8D8D6] rounded-bl-[4rem] rounded-br-[4rem] z-[999] pt-8 pb-6">

                <!-- Menu Links - Moved Down -->
                <div class="flex flex-col items-end justify-start h-full pr-10 pt-16">
                    <div class="flex flex-col text-3xl font-bold leading-[1.15] tracking-tight text-right space-y-2">
                        <a class="relative group transition-all duration-300 text-white hover:text-gray-200 active:text-gray-400 focus:outline-none focus:ring-0 py-2"
                           href="/"
                           style="-webkit-tap-highlight-color: transparent !important; outline: none !important; background-color: transparent !important;">
                            <span>Home</span>
                        </a>

                        <!-- Menu Link - This will trigger the categories popup -->
                        <a class="relative group transition-all duration-300 text-white hover:text-gray-200 active:text-gray-400 focus:outline-none focus:ring-0 py-2 mobile-menu-trigger"
                           href="#"
                           id="mobile-menu-categories-trigger"
                           style="-webkit-tap-highlight-color: transparent !important; outline: none !important; background-color: transparent !important;">
                            <span>Menu</span>
                        </a>

                        <a class="relative group transition-all duration-300 text-white hover:text-gray-200 active:text-gray-400 focus:outline-none focus:ring-0 py-2"
                           href="/about"
                           style="-webkit-tap-highlight-color: transparent !important; outline: none !important; background-color: transparent !important;">
                            <span>About Us</span>
                        </a>

                        <a class="relative group transition-all duration-300 text-white hover:text-gray-200 active:text-gray-400 focus:outline-none focus:ring-0 py-2"
                           href="/services"
                           style="-webkit-tap-highlight-color: transparent !important; outline: none !important; background-color: transparent !important;">
                            <span>Services</span>
                        </a>

                        <a class="relative group transition-all duration-300 text-white hover:text-gray-200 active:text-gray-400 focus:outline-none focus:ring-0 py-2"
                           href="/contactus"
                           style="-webkit-tap-highlight-color: transparent !important; outline: none !important; background-color: transparent !important;">
                            <span>Contact Us</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile Categories Popup - IMPROVED CENTERING AND RESPONSIVE DESIGN -->
        <div id="mobile-categories-popup" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[1001] hidden opacity-0 transition-all duration-300 flex items-center justify-center p-4">

            <!-- White Container Box - BETTER RESPONSIVE SIZING -->
            <div class="mobile-categories-container bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col transform scale-95 transition-all duration-300 w-full max-w-sm mx-auto my-auto">

                <!-- Header with Close Button -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200 flex justify-between items-center flex-shrink-0">
                    <h2 class="text-2xl font-bold text-gray-900">Categories</h2>
                    <button id="mobile-categories-close" class="p-2 rounded-full hover:bg-gray-200 transition-colors duration-200">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </button>
                </div>

                <!-- Scrollable Categories Grid -->
                <div class="flex-1 overflow-y-auto p-4">
                    <div class="mobile-categories-grid space-y-3">

                        <!-- Rice Box -->
                        <a href="#rice-box-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-rice-box.png" alt="Rice Box" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">FOOD &amp; MEALS</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">RICE BOX</div>
                                </div>
                            </div>
                        </a>

                        <!-- Fish and Chips -->
                        <a href="#fish-and-chips-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-fish-and-chips.png" alt="Fish and Chips" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">CRISPY &amp; GOLDEN</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">FISH &amp; CHIPS</div>
                                </div>
                            </div>
                        </a>

                        <!-- Pasta -->
                        <a href="#pasta-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-pasta.png" alt="Pasta" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">ITALIAN &amp; CLASSIC</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">PASTA</div>
                                </div>
                            </div>
                        </a>

                        <!-- Turkish Feast -->
                        <a href="#turkish-feast-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-turkish-foods.png" alt="Turkish Feast" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">INTERNATIONAL &amp; FEAST</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">TURKISH FEAST</div>
                                </div>
                            </div>
                        </a>

                        <!-- Wraps & Rolls -->
                        <a href="#wraps-rolls-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-wraps-and-rolls.png" alt="Wraps and Rolls" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">WRAPPED &amp; ROLLED</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">WRAPS &amp; ROLLS</div>
                                </div>
                            </div>
                        </a>

                        <!-- New Arrivals -->
                        <a href="#new-arrivals-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-new-arrivals.png" alt="New Arrivals" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">LATEST &amp; FRESH</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">NEW ARRIVALS</div>
                                </div>
                            </div>
                        </a>

                        <!-- Soups & Salads -->
                        <a href="#soups-and-salads-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-soups-salads.png" alt="Soups &amp; Salads" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">HEALTHY &amp; LIGHT</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">SOUPS &amp; SALADS</div>
                                </div>
                            </div>
                        </a>

                        <!-- Cold Drinks -->
                        <a href="#cold-drinks-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-cold-drinks.png" alt="Cold Drinks" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">COLD &amp; REFRESHING</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">COLD DRINKS</div>
