                        <a href="#hot-beverages-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-hot-beverages.png" alt="Hot Beverages" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">HOT &amp; WARM</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">HOT BEVERAGES</div>
                                </div>
                            </div>
                        </a>

                        <!-- Desserts -->
                        <a href="#desserts-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-desert.png" alt="Desserts" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">SWEET &amp; TREATS</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">DESSERTS</div>
                                </div>
                            </div>
                        </a>

                        <!-- BBQ -->
                        <a href="#bbq-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-bbq.png" alt="BBQ" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">GRILLED &amp; BBQ</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">BBQ SPECIALS</div>
                                </div>
                            </div>
                        </a>

                        <!-- Fast Food -->
                        <a href="#fast-food-section" class="mobile-category-item block text-decoration-none">
                            <div class="mobile-category-card bg-white border-2 border-gray-200 rounded-2xl p-4 flex items-center space-x-4 transition-all duration-300 hover:border-gray-300 hover:shadow-lg hover:bg-gray-50">
                                <div class="flex-shrink-0">
                                    <img src="/website_customizations/static/src/images/category-burger.png" alt="Fast Food" class="w-12 h-12 object-contain"/>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">QUICK &amp; FAST</div>
                                    <div class="text-sm font-bold text-gray-900 uppercase tracking-wide">FAST FOOD</div>
                                </div>
                            </div>
                        </a>

                    </div>
                </div>

            </div>
        </div>

    </template>
</odoo>