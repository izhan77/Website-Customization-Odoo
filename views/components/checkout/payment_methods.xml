<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_methods" name="Payment Methods Section">
        <section class="payment-section bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="section-title text-2xl font-bold text-gray-800 mb-6 flex items-center">
                <i class="fas fa-credit-card text-primary mr-3"></i>
                Payment Method
            </h2>

            <div class="payment-methods grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                <div class="payment-option cash active cursor-pointer" data-method="cash">
                    <div class="p-6 border-2 border-primary bg-primary/10 rounded-lg transition-all hover:shadow-md">
                        <div class="flex items-center space-x-4">
                            <div class="payment-icon bg-primary text-white p-3 rounded-lg">
                                <i class="fas fa-money-bill-wave text-xl"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">Cash on Delivery</h4>
                                <p class="text-gray-600 text-sm">Pay when your order arrives</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="payment-option card cursor-pointer" data-method="card">
                    <div class="p-6 border-2 border-gray-200 rounded-lg transition-all hover:shadow-md hover:border-primary/50">
                        <div class="flex items-center space-x-4">
                            <div class="payment-icon bg-gray-100 text-gray-600 p-3 rounded-lg">
                                <i class="fas fa-credit-card text-xl"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">Online Payment</h4>
                                <p class="text-gray-600 text-sm">Pay securely with card</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Include Card Payment Form Component -->
            <t t-call="website_customizations.card_payment_form"/>
        </section>
    </template>
</odoo>