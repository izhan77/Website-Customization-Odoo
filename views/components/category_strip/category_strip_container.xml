<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="category_strip_container" name="Category Strip Container">
        <div class="relative flex items-center py-3">
            <!-- Left Arrow -->
            <button id="scroll-left" class="category-arrow left-arrow flex-shrink-0 w-10 h-10 bg-[#34495e] hover:bg-[#4a6741] text-white rounded-full flex items-center justify-center mr-4 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15,18 9,12 15,6"></polyline>
                </svg>
            </button>

            <!-- Categories Container -->
            <div id="categories-wrapper" class="flex-1 overflow-hidden">
                <div id="categories-container" class="flex space-x-4 transition-transform duration-500 ease-in-out">
                    <t t-call="website_customizations.category_strip_items"/>
                </div>
            </div>

            <!-- Right Arrow -->
            <button id="scroll-right" class="category-arrow right-arrow flex-shrink-0 w-10 h-10 bg-[#34495e] hover:bg-[#4a6741] text-white rounded-full flex items-center justify-center ml-4 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9,18 15,12 9,6"></polyline>
                </svg>
            </button>
        </div>
    </template>
</odoo>